<div class="container">
  <div class="card ">
    <h4 class="card-header text-center">All Blogs</h4>
    <div class="card-body table-responsive"> 
      <br/>
      <table class="table table-striped table-bordered ">
        <thead class="thead-dark">
          <tr>
            <th>Name</th>
            <th>Title</th>
            <th>Content</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @blogs.each do |blog| %>
            <tr>
              <td><%= blog.name %></td>
              <td><%= blog.title %></td>
              <td><%= blog.content.split[0..9].join(' ')  %><% if blog.content.length > 37%>...<% end %></td>
              <td><%= link_to 'Show', blog, class: "btn btn-dark"%></td>
              <td><%= link_to 'Edit', edit_blog_path(blog), class: "btn btn-secondary"%></td>
              <td><%= link_to 'Delete', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
     <br/>
  </div>
  <br/>
  <%= link_to 'New Blog', new_blog_path, class: "btn btn-primary"%>
</div>